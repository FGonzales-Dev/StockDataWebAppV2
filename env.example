# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-app-name.ondigitalocean.app,yourdomain.com

# Database (will be provided by DigitalOcean)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis (will be provided by DigitalOcean)
REDIS_URL=redis://localhost:6379

# Logging
DJANGO_LOG_LEVEL=INFO

# Firebase/Firestore (if using)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Email (optional - configure if using email features)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True 